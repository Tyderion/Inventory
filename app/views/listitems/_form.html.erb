<%= semantic_form_for @listitem do |f| %>
<%= f.inputs do %>
  <% if @listitem.list_id.nil? %>
    	<%= f.input :list %>
    <% else %>
    	<%= f.input :list_id, as: :hidden %>
    <% end %>
    <% if @list.nil? %>
    <%= f.input :item %>
    <% else %>
  <%= f.input :item, as: :string, input_html: {id: "autocomplete_items", complete: "item_id"} %>
  <%= f.input :item_id , as: :hidden%>
  <% end %>
  <%= f.input :amount %>
  <%= f.input :quota %>
  <% end %>
<%= f.actions %>
<% end %>

